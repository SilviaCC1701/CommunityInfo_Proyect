<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/granate"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Registro">

    <TextView
        android:id="@+id/txtview_nombre3"
        android:layout_width="230dp"
        android:layout_height="96dp"
        android:fontFamily="@font/chamberi_text_semibold"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="33sp"
        android:layout_marginTop="150dp" />

    <EditText
        android:id="@+id/edittxt_name"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:ems="20"
        android:fontFamily="@font/chamberi_text_regular"
        android:hint="Nombre"
        android:inputType="text"
        android:paddingStart="20dp"
        android:textColor="@color/dark_blue"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/edittxt_user"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:ems="20"
        android:fontFamily="@font/chamberi_text_regular"
        android:hint="Nombre de Usuario"
        android:inputType="text"
        android:paddingStart="20dp"
        android:textColor="@color/dark_blue"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/edittxt_emailregister"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:ems="20"
        android:fontFamily="@font/chamberi_text_regular"
        android:hint="Correo Electrónico"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:textColor="@color/dark_blue"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/edittxt_passwordRegister"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:ems="20"
        android:fontFamily="@font/chamberi_text_regular"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:textColor="@color/dark_blue"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btn_registrarse_register"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/grisClaro"
        android:fontFamily="@font/chamberi_text_semibold"
        android:text="Registrarse"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/txtview_cuentacreada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chamberi_text_light"
        android:text="¿Ya tienes una cuenta?"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>