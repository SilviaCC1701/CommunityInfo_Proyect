<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. Es un color temporal de momento -->
    <style name="Base.Theme.CommunityInfo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:fontFamily">@font/chamberi_text_regular</item>
    </style>

    <style name="AppBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/blueDark</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationViewActive</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationViewInactive</item>
    </style>

    <!-- Estilo para el texto del ítem activo -->
    <style name="BottomNavigationViewActive">
        <item name="android:textColor">@color/graySoft</item>
    </style>

    <!-- Estilo para el texto del ítem inactivo -->
    <style name="BottomNavigationViewInactive">
        <item name="android:textColor">@color/blueDark</item>
    </style>

    <style name="Theme.CommunityInfo" parent="Base.Theme.CommunityInfo" />
</resources>